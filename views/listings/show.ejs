<% layout("/layouts/boilerplate") %>

<div class="details-container">
  <div class="details-card">
    <img src="<%= listings.image %>" alt="<%= listings.title %>" class="details-img" />

    <div class="details-content">
      <h1 class="details-title"><%= listings.title %></h1>
      <p class="details-location"><i class="fas fa-map-marker-alt"></i> <%= listings.location %>, <%= listings.country %></p>
      <p class="details-price">₹ <%= listings.price.toLocaleString("en-IN") %></p>
      <p class="details-description"><%= listings.description %></p>

      <div class="details-actions">
        <a href="/listings/<%= listings.id %>/edit" class="edit-btn">✏️ Edit Listing</a>
        <form method="POST" action="/listings/<%= listings.id %>?_method=DELETE" class="delete-form">
          <button type="submit" class="delete-btn">🗑️ Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
