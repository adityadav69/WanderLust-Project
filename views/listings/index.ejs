<% layout("/layouts/boilerplate") %>

<div class="listings-container">
  <% allListings.forEach(listing => { %>
    <div class="listing-card">
      <img src="<%= listing.image %>" alt="<%= listing.title %>" class="listing-img" />
      <div class="listing-details">
        <h2 class="listing-title"><%= listing.title %></h2>
        <p class="listing-price">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
        <p class="listing-desc"><%= listing.description %></p>
        <a href="/listings/<%= listing.id %>" class="listing-btn">View Details</a>
      </div>
    </div>
  <% }) %>
</div>
